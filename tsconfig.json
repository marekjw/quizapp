{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "lib": [
      "es5",
      "dom",
      "ES2015"
    ],
    "watch": false,
    "listFiles": false
  },
  "exclude": [
    "node_modules"
  ]
}